rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    /* ===========================
       USERS
    =========================== */
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow write: if isSignedIn() && isOwner(userId);

      match /brandVisits/{visitId} {
        allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());
      }

      match /trainingVisits/{visitId} {
        allow read, write: if isSignedIn() && (isOwner(userId) || isAdmin());
      }
    }

    /* ===========================
       BRANDS
    =========================== */
    match /brands/{brandId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /* ===========================
       TRAININGS
    =========================== */
    match /trainings/{trainingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /* ===========================
       QUIZZES (READ ONLY)
    =========================== */
    match /quizzes/{quizId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    /* ===========================
       QUIZ QUESTIONS (READ ONLY)
    =========================== */
    match /quizQuestions/{questionId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    /* ===========================
       QUIZ ANSWERS (READ ONLY)
       Note: isCorrect field exists but security rules don't filter fields.
       The Cloud Function handles scoring - frontend just displays options.
    =========================== */
    match /quizAnswers/{answerId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    /* ===========================
       USER PROGRESS
    =========================== */
    match /progress/{progressId} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow create, update: if isSignedIn()
        && isOwner(request.resource.data.userId);
      allow delete: if false;
    }
  }
}
